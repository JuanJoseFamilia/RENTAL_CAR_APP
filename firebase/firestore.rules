service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para reviews: permitir lectura y creación autenticada,
    // pero prohibir actualizaciones y eliminaciones desde clientes.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if false; // No se permiten ediciones de reseñas desde la app
      allow delete: if false; // Tampoco se permiten eliminaciones desde la app
    }

    // Otras reglas por defecto (puedes ampliarlas según tus necesidades)
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}